{
  "$schema": "https.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "rootDirectory": "/frontend"
  },
  "deploy": {
    "startCommand": "npx http-server ./dist",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
